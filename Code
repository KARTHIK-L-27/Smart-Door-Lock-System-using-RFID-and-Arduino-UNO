#include <SPI.h>
#include <MFRC522.h>
#include <Servo.h>

#define SS_PIN 10
#define RST_PIN 9

MFRC522 rfid(SS_PIN, RST_PIN);
Servo lockServo;

void setup() {
  SPI.begin();
  rfid.PCD_Init();
  lockServo.attach(6);

  pinMode(7, OUTPUT); // LED
  pinMode(8, OUTPUT); // Buzzer

  Serial.begin(9600);
}

void loop() {
  if (!rfid.PICC_IsNewCardPresent()) return;
  if (!rfid.PICC_ReadCardSerial()) return;

  Serial.print("Card UID: ");
  for (byte i = 0; i < rfid.uid.size; i++) {
    Serial.print(rfid.uid.uidByte[i], HEX);
  }
  Serial.println();

  // Example UID check (demo)
  if (rfid.uid.uidByte[0] == 0xDE) {
    lockServo.write(90);  // Unlock
    digitalWrite(7, HIGH);
    delay(3000);
    lockServo.write(0);   // Lock
    digitalWrite(7, LOW);
  } else {
    digitalWrite(8, HIGH); // Buzzer ON
    delay(1000);
    digitalWrite(8, LOW);
  }

  rfid.PICC_HaltA();
}
